<link rel="stylesheet" href="/css/style.css">

<h2 style="text-align:center">Welcome Back</h2>


<main>
    <div class="container">
          <div class="row">
            <div class="col m12 l5">
        <div class="card">
            {{#with user}}
            <img src="/css/images/pro1.jpg" alt="Alex" style="width:100%">
            <h1>{{username}}</h1>
            <p class="title">{{job_title}}</p>
            <p>{{company_name}}</p>
                <div style="margin: 24px 0;">
                    <a href="#"><i class="fa fa-twitter"></i></a>  
                    <a href="#"><i class="fa fa-linkedin"></i></a>  
                    <a href="#"><i class="fa fa-github"></i></a> 
                </div>
                <a class="contact-btn" href="mailto: {{email}}"> Contact </a>
            {{/with}}
        </div>
    </div>
            <div class="container">
    <div class="row">
        {{#each images}}
        <div class="col s12 m6 l4">
            <div class="card medium">
                <div class="card-image ">
                    <img class="responsive-image" src="/api/photos/{{key}}">
                </div>                    
                <div class="card-action">
                    <h3> <span class="right material-icons">favorite</span></h3>
                </div>
            </div>
        </div>
        {{/each}}
    
    </div>
</div>
    </div>
    </div>
  

